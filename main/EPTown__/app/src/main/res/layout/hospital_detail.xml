<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="MissingConstraints">

            <!-- 뒤로가기 화살표와 사진 -->
            <ImageButton
                android:id="@+id/btnHospitalDetailBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left"
                android:background="?attr/selectableItemBackgroundBorderless"  />

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/image_hospital"
                android:layout_marginTop="20dp"/>

            <!-- 동그라미 아이콘과 진료중 텍스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/circleIcon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_ellipse_green" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진료중"
                    android:textSize="11sp"
                    android:paddingStart="8dp"
                    android:textColor="#51CF66"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 병원 이름 -->
            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동물병원 누리에뜰"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#D3D3D3"
                android:layout_marginTop="12dp" />

            <!-- 핀 아이콘과 주소 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/pinIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_vector" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인천 남동구 호구포로 832 1, 2, 3층 동물병원 누리에뜰"
                    android:textSize="13sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 시계 아이콘, 진료시간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="15dp">

                <!-- 월요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/openingDayMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 18:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 월요일 휴게 시간 -->
                <TextView
                    android:id="@+id/breakTimeMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 ~ 14:00 휴게시간"
                    android:textSize="14sp"
                    android:paddingStart="65dp"/>

                <!-- 화요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDayTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="화요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 18:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 화요일 휴게 시간 -->
                <TextView
                    android:id="@+id/breakTimeTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 ~ 14:00 휴게시간"
                    android:textSize="14sp"
                    android:paddingStart="65dp" />


                <!-- 수요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDayWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 18:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 수요일 휴게 시간 -->
                <TextView
                    android:id="@+id/breakTimeWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 ~ 14:00 휴게시간"
                    android:textSize="14sp"
                    android:paddingStart="65dp" />


                <!-- 목요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDayThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="목요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 18:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 목요일 휴게 시간 -->
                <TextView
                    android:id="@+id/breakTimeThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 ~ 14:00 휴게시간"
                    android:textSize="14sp"
                    android:paddingStart="65dp" />


                <!-- 금요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDayFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 18:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 금요일 휴게 시간 -->
                <TextView
                    android:id="@+id/breakTimeFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 ~ 14:00 휴게시간"
                    android:textSize="14sp"
                    android:paddingStart="65dp" />

                <!-- 토요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDaySaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 15:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 일요일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDaySunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일요일"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                    <TextView
                        android:id="@+id/openingHoursSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 ~ 15:00"
                        android:textSize="14sp"
                        android:paddingStart="20dp" />
                </LinearLayout>

                <!-- 공휴일 진료 시간 묶음 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/openingDayHoliday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 공휴일 휴무"
                        android:textSize="14sp"
                        android:paddingStart="8dp" />

                </LinearLayout>
            </LinearLayout>



            <!-- 전화 아이콘과 전화번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/phoneIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="032-488-9823"
                    android:textSize="13sp"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3"
                android:paddingTop="8dp"
                android:layout_marginTop="10dp"/>

            <!-- 진료 정보 -->
            <TextView
                android:id="@+id/treatmentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진료정보"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>

            <!-- 진료 정보 버튼들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- 일반진료 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일반진료"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/ic_rounded_square"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#1B4197"/>

                <!-- 전문진료 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전문진료"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/ic_rounded_square"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textColor="#1B4197"/>

                <!-- 응급실 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="응급실"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:background="@drawable/ic_rounded_square"
                    android:padding="4dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"
                    android:textColor="#1B4197"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>