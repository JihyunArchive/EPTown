<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnCategoryFeed1Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 리뷰 작성 -->
    <TextView
        android:id="@+id/inquire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="리뷰 작성"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 작성한 리뷰 -->
    <TextView
        android:id="@+id/writtenReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="75dp"
        android:text="작성한 리뷰"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 리뷰 쓰기 -->
    <TextView
        android:id="@+id/writeReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="75dp"
        android:text="리뷰 쓰기"
        android:textColor="#F59701"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 작성한 리뷰 아래 밑줄 -->
    <View
        android:id="@+id/shortHorizon"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="105dp"
        android:background="#F59701"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />


    <!-- 사료.랭킹 사이 수평선 -->
    <View
        android:id="@+id/firstHorizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="105dp"
        android:background="#E7E7E7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 상품 -->
    <ImageView
        android:id="@+id/catImageOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="137dp"
        android:src="@drawable/image_cat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상품 이름-->
    <TextView
        android:id="@+id/productOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="157dp"
        android:text="이나바 캣 챠오 츄르 참치 14g*40p"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상품 가격 -->
    <TextView
        android:id="@+id/productOnePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:text="1개 (14,400원)"
        android:textColor="#A1A9AD"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/catImageOne"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/secondHorizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="20dp"
        android:background="#D2D5D6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 평점 -->
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="264dp"
        android:text="평점"
        android:textColor="#33363F"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFive"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="254dp"
        android:src="@drawable/ic_profile_administration_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력창 안 내용 -->
    <EditText
        android:id="@+id/contentInformationTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="38dp"
        android:background="@null"
        android:hint="상품을 1부터 5점까지 골라 평점을 매겨주세요"
        android:textColor="#565C65"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/enterBoxFive"
        app:layout_constraintTop_toTopOf="@id/enterBoxFive"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFive"/>

    <!-- 평점 아래 수평선-->
    <View
        android:id="@+id/thirdtHorizon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="307dp"
        android:background="#D2D5D6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 내용 -->
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="332dp"
        android:text="내용"
        android:textColor="#33363F"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFour"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/ic_profile_administration_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 입력창 안 내용 -->
    <EditText
        android:id="@+id/contentInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:background="@null"
        android:text="우리 냥냥이가 맛있게 잘 먹고 있는 상품입니다. 배송도 빠르고\n좋네요!ㅎㅎ"
        android:textColor="#565C65"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/enterBoxFour"
        app:layout_constraintTop_toTopOf="@id/enterBoxFour" />

    <!-- 사진 올리는 버튼 -->
    <ImageButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="465dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_community_camera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 사진 -->
    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/image_review_cat"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 등록하기 하얀 사각형 배경 -->
    <ImageView
        android:id="@+id/buyFixBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_buy_fix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 등록하기 버튼 -->
    <Button
        android:id="@+id/buyFixButton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_coupon3_receive"
        android:text="등록하기"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>