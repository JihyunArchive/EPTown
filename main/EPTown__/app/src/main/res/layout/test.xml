<?xml version="1.0" encoding="utf-8"?>
<!-- 유저 추천 상품 리스트 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">



            <!-- 리뷰1 사진 -->
            <ImageView
                android:id="@+id/productOneImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="31dp"
                android:src="@drawable/image_cat_ciao_churu_tuna_14g40p_small" />

            <!-- 리뷰1 이름 -->
            <TextView
                android:id="@+id/productOneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이나바 캣 챠오 츄르 참치 14g*40p"
                android:textSize="12sp"
                android:layout_marginTop="7dp" />

            <!-- 리뷰1 가격 -->
            <TextView
                android:id="@+id/productOnePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개 (14,400원)"
                android:textColor="#A1A9AD"
                android:textSize="12sp"
                android:layout_marginTop="7dp" />

            <!-- 수정 | 삭제 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textColor="#A1A9AD"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="#A1A9AD"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textColor="#A1A9AD"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <!-- 이나바 아래 수평선 -->
            <View
                android:id="@+id/secondtHorizon"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7dp"
                android:background="#E7E7E7" />

            <!-- 이나바 별점 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/firstProductStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/firstStarNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textColor="#A1A9AD"
                    android:textSize="11sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/orTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="#A1A9AD"
                    android:textSize="11sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024.10.25"
                    android:textColor="#A1A9AD"
                    android:textSize="11sp"
                    android:layout_marginStart="10dp" />
            </LinearLayout>

            <!-- 리뷰1 내용 -->
            <TextView
                android:id="@+id/contentOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우리 집 냥냥이가 아주 맛있게 잘 먹고 있는 상품입니다. 생각보다 배송도"
                android:textSize="12sp"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/contentOne_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빠르고 좋네요!ㅎㅎ"
                android:textSize="12sp"
                android:layout_marginTop="7dp" />

            <!-- 첫번째 리뷰 아래 수평선 -->
            <View
                android:id="@+id/thirdHorizon"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="7dp"
                android:background="#F5F6F7" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
