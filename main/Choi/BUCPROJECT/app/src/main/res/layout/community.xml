<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"> <!-- 수직 가운데 정렬 -->

                <!-- 왼쪽 화살표 아이콘 -->
                <ImageView
                    android:id="@+id/btnHospitalBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left"
                    android:layout_marginEnd="8dp"/> <!-- 아이콘과 텍스트 간격 -->

                <!-- 커뮤니티 헤더 텍스트 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="커뮤니티"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- 첫 번째 게시글 -->
        <LinearLayout
            android:id="@+id/firstCommunity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최연주"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | 오늘 11:05"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="#AEB2BA"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- 제목 부분 -->
            <TextView
                android:id="@+id/community1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="돌고돌아 정착한 포징이가 제일 좋아하는 가방"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <!-- 내용 부분 -->
            <TextView
                android:id="@+id/community1_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우연히 에펫타운에서 보고 산 가방이에요. 바깥도 구경하고 안에는 쿠션도 옵션값 없이 포함된 가격으로 너무 좋아요!! 가격 구성 다 잡는 가방 추천드립니다!!"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/community1_image"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/dog_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="start">

                <ImageView
                    android:id="@+id/comment1_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    android:layout_marginTop="15dp"/>

                <!-- 오른쪽으로 이동하기 위한 여백 추가 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/> <!-- 여백을 추가하여 오른쪽으로 밀기 -->

                <TextView
                    android:id="@+id/report1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|  신고"
                    android:textSize="12sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#AEB2BA"/>
            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#E4E4E4"
                android:layout_marginTop="15dp"/>


            <!-- 두 번째 게시글 -->
            <LinearLayout
                android:id="@+id/secondCommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최연주"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | 오늘 11:05"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="#AEB2BA"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 제목 부분 -->
                <TextView
                    android:id="@+id/community2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돌고돌아 정착한 포징이가 제일 좋아하는 가방"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <!-- 내용 부분 -->
                <TextView
                    android:id="@+id/community2_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우연히 에펫타운에서 보고 산 가방이에요. 바깥도 구경하고 안에는 쿠션도 옵션값 없이 포함된 가격으로 너무 좋아요!! 가격 구성 다 잡는 가방 추천드립니다!!"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/community2_image"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/dog_image"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/comment2_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment"
                        android:layout_marginTop="15dp"/>

                    <!-- 오른쪽으로 이동하기 위한 여백 추가 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/> <!-- 여백을 추가하여 오른쪽으로 밀기 -->

                    <TextView
                        android:id="@+id/report2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|  신고"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#AEB2BA"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#E4E4E4"
                android:layout_marginTop="15dp"/>


            <!-- 세 번째 게시글 -->
            <LinearLayout
                android:id="@+id/thirdCommunity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최연주"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | 오늘 11:05"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:textColor="#AEB2BA"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 제목 부분 -->
                <TextView
                    android:id="@+id/community3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="돌고돌아 정착한 포징이가 제일 좋아하는 가방"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <!-- 내용 부분 -->
                <TextView
                    android:id="@+id/community3_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우연히 에펫타운에서 보고 산 가방이에요. 바깥도 구경하고 안에는 쿠션도 옵션값 없이 포함된 가격으로 너무 좋아요!! 가격 구성 다 잡는 가방 추천드립니다!!"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/comment3_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment"
                        android:layout_marginTop="15dp"/>

                    <!-- 오른쪽으로 이동하기 위한 여백 추가 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/> <!-- 여백을 추가하여 오른쪽으로 밀기 -->

                    <TextView
                        android:id="@+id/report3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|  신고"
                        android:textSize="12sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#AEB2BA"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#E4E4E4"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

    </ScrollView>

    <!--  탭바 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/MainTapFixBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:src="@drawable/tap_bg_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!--  탭바 홈 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/HomeRectangleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/tap_regtangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!--  홈 아이콘  -->
    <ImageView
        android:id="@+id/NowTapHomeIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/home"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@id/HomeRectangleBar"
        app:layout_constraintTop_toTopOf="@id/HomeRectangleBar"/>
    <!--  홈 텍스트  -->
    <TextView
        android:id="@+id/NowTapHomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈"
        android:textSize="10sp"
        android:textColor="#B9BEC1"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/HomeRectangleBar"
        app:layout_constraintTop_toBottomOf="@id/NowTapHomeIcon"
        android:includeFontPadding="false"/>
    <!--  탭바 커뮤니티 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/CommunityRectangleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/tap_regtangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/HomeRectangleBar"/>
    <!--  커뮤니티 아이콘  -->
    <ImageView
        android:id="@+id/TapCommunityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tap_community"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/CommunityRectangleBar"
        app:layout_constraintTop_toTopOf="@id/CommunityRectangleBar"/>
    <!--  커뮤니티 텍스트  -->
    <TextView
        android:id="@+id/TapCommunityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/CommunityRectangleBar"
        app:layout_constraintTop_toBottomOf="@id/TapCommunityIcon"
        android:includeFontPadding="false"/>
    <!--  탭바 카테고리 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/CategoryRectangleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/tap_regtangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/CommunityRectangleBar"/>
    <!--  카테고리 아이콘  -->
    <ImageView
        android:id="@+id/TapCategoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_category"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/CategoryRectangleBar"
        app:layout_constraintTop_toTopOf="@id/CategoryRectangleBar"/>
    <!--  카테고리 텍스트  -->
    <TextView
        android:id="@+id/TapCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="10sp"
        android:textColor="#B9BEC1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/CategoryRectangleBar"
        app:layout_constraintTop_toBottomOf="@id/TapCategoryIcon"
        android:includeFontPadding="false"/>
    <!--  탭바 병원 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/HospitalRectangleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/tap_regtangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/CategoryRectangleBar"/>
    <!--  병원 아이콘  -->
    <ImageView
        android:id="@+id/TapHostpitalIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hospital"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/HospitalRectangleBar"
        app:layout_constraintTop_toTopOf="@id/HospitalRectangleBar"/>
    <!--  병원 텍스트  -->
    <TextView
        android:id="@+id/TapHostpitalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원"
        android:textSize="10sp"
        android:textColor="#B9BEC1"
        android:layout_marginStart="33.5dp"
        android:layout_marginTop="3.5dp"
        app:layout_constraintStart_toStartOf="@id/HospitalRectangleBar"
        app:layout_constraintTop_toBottomOf="@id/TapHostpitalIcon"
        android:includeFontPadding="false"/>
    <!--  탭바 내 정보 배경 하얀색 사각형  -->
    <ImageView
        android:id="@+id/MypageRectangleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/tap_regtangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/HospitalRectangleBar"/>
    <!--  내 정보 아이콘  -->
    <ImageView
        android:id="@+id/TapMypageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mypage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/MypageRectangleBar"
        app:layout_constraintTop_toTopOf="@id/MypageRectangleBar"/>
    <!--  내 정보 텍스트  -->
    <TextView
        android:id="@+id/TapMypageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:textSize="10sp"
        android:textColor="#B9BEC1"
        android:layout_marginStart="28dp"
        android:layout_marginTop="2.5dp"
        app:layout_constraintStart_toStartOf="@id/MypageRectangleBar"
        app:layout_constraintTop_toBottomOf="@id/TapMypageIcon"
        android:includeFontPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
