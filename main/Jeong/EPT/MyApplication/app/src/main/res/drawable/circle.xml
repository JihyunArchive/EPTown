<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 원형의 배경색 -->
    <solid android:color="#FFFFFF"/>

    <!-- 원형의 테두리 추가 -->
    <stroke
        android:width="1dp"
        android:color="#E7E7E7"/>  <!-- 테두리 색상 설정 -->

    <!-- 내부 패딩 (선택 사항) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
