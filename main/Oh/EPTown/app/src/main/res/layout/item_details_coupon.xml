<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 상태바 아래 하얀 사각형 배경 -->
    <ImageView
        android:id="@+id/GetCouponFixBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_detail_status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 왼쪽 뒤로가기 아이콘 -->
    <ImageView
        android:id="@+id/GetCouponBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GetCouponFixBar" />

    <!-- 쿠폰받기 -->
    <TextView
        android:id="@+id/GetCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠폰받기"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/GetCouponFixBar"
        android:layout_marginTop="16dp"/>

    <!-- 쿠폰받기 아래 구분바 -->
    <View
        android:id="@+id/DivideGetCouponFixBar"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@drawable/rectangle_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GetCouponFixBar" />

    <!-- 첫 번째 쿠폰리스트 -->
    <!-- 할인 퍼센트 -->
    <TextView
        android:id="@+id/CouponDiscount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30%"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/DivideGetCouponFixBar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 쿠폰명 -->
    <TextView
        android:id="@+id/CouponName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ 추석 선물 ] 간식 30% 쿠폰"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/CouponDiscount1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 쿠폰설명 -->
    <TextView
        android:id="@+id/CouponText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50,000원 이상 구매 시 최대 15,000원 할인"
        android:textColor="#9E9E9E"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/CouponName1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 쿠폰 구분바 -->
    <ImageView
        android:id="@+id/DivideCouponListBar1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/item_detail_delivery_divide_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/CouponText1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 두 번째 쿠폰리스트 -->
    <!-- 할인 퍼센트 -->
    <TextView
        android:id="@+id/CouponDiscount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25%"
        android:textColor="@color/orange"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/DivideCouponListBar1"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 쿠폰명 -->
