<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 나가기 버튼 -->
    <ImageButton
        android:id="@+id/btnLoginBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_left_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 건강 정보 관리 -->
    <TextView
        android:id="@+id/profile_administration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강 정보 관리"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 건강 정보 관리 아래 수평선 -->
    <View
        android:id="@+id/Horizon"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="56dp"
        android:background="#F5F6F7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 이름 -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="105dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxOne"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="98dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 이름 -->
    <EditText
        android:id="@+id/nameEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="플목이"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxOne"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxOne" />

    <!-- 생일 -->
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="158dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxTwo"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="151dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 나이 -->
    <EditText
        android:id="@+id/ageEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="3살"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxTwo"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxTwo" />

    <!-- 나이 -->
    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체중"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="211dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxThree"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="204dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 나이 -->
    <EditText
        android:id="@+id/weightEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="3kg"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxThree"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxThree" />

    <!-- 키 -->
    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFour"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="257dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 키 -->
    <EditText
        android:id="@+id/heightEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="26cm"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxFour"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFour" />

    <!-- 정기검진 -->
    <TextView
        android:id="@+id/regularCheckUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정기검진"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="317dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxFive"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="310dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 정기검진 -->
    <EditText
        android:id="@+id/regularCheckUpEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="2023년 7월 6일"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxFive"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFive"/>

    <!-- 건강상태 -->
    <TextView
        android:id="@+id/healthCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정기검진"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="317dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 입력창 -->
    <ImageView
        android:id="@+id/enterBoxSix"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_profile_administration_box"
        android:layout_marginTop="310dp"
        android:layout_marginStart="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 반려동물 건강상태 -->
    <EditText
        android:id="@+id/healthConditionEnter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="85dp"
        android:background="@null"
        android:text="이상없음"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/enterBoxFive"
        app:layout_constraintBottom_toBottomOf="@id/enterBoxFive"/>

    <!-- 반려동물 프로필 수정하고나서 뜨는 창 -->
    <ImageView
        android:id="@+id/registerBox"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_community_register_box"
        android:layout_marginBottom="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <!-- 반려동물 프로필이 수정되었습니다 -->
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반려동물 프로필이 수정되었습니다"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/registerBox"
        app:layout_constraintStart_toStartOf="@id/registerBox"
        app:layout_constraintTop_toTopOf="@id/registerBox"
        app:layout_constraintBottom_toBottomOf="@id/registerBox"
        android:visibility="gone"/>

    <!-- 수정하기 하얀 사각형 배경 -->
    <ImageView
        android:id="@+id/buyFixBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_buy_fix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 수정하기 버튼 -->
    <Button
        android:id="@+id/buyFixButton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:text="수정하기"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_coupon3_receive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
